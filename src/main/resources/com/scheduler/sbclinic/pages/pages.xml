<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="true"/>

    <package name="sb-clinic-pages" namespace="/pages" extends="struts-default">
        
        <action name="login" class="com.scheduler.sbclinic.pages.login.Login">
            <interceptor-ref name="defaultStack"/>
            <result name="input">/WEB-INF/views/Login.jsp</result>
            <result name="success">/WEB-INF/views/profiles/Patient.jsp</result>
            <result name="error">/WEB-INF/views/Login.jsp</result>
        </action>
        <action name="appointment" class="com.scheduler.sbclinic.pages.Appointment">
            <result>/WEB-INF/views/Appointment.jsp</result>
        </action>
        <action name="services" class="com.scheduler.sbclinic.pages.Services">
            <result>/WEB-INF/views/Services.jsp</result>
        </action>
        <action name="contact" class="com.scheduler.sbclinic.pages.contact.Contact" method="execute">
            <result name="input">/WEB-INF/views/Contact.jsp</result>
        </action>
        <action name="send_message" class="com.scheduler.sbclinic.pages.contact.Contact" method="sendMessage">
            <interceptor-ref name="defaultStack" />
            <result name="input">/WEB-INF/views/Contact.jsp</result>
            <result name="success">/WEB-INF/views/Contact.jsp</result>
            <result name="error">/WEB-INF/views/Contact.jsp</result>
        </action>
    </package>

    <!-- Add addition packages and configuration here. -->
    
</struts>
